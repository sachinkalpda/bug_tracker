<main>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="project-details">
                    <h2><%= project.title %></h2>
                    <p><%= project.description %></p>
                </div>
            </div>
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-2">
                        <div class="label-card">
                            <h5>Filter By</h5>
                            <div class="label-item">
                                <input type="checkbox"> Filter 1
                            </div>
                            <div class="label-item">
                                <input type="checkbox"> Filter 1
                            </div>
                            <div class="label-item">
                                <input type="checkbox"> Filter 1
                            </div>
                            <div class="label-item">
                                <input type="checkbox"> Filter 1
                            </div>

                        </div>
                    </div>
                    <div class="col-md-10">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="issue-option-bar">
                                    <h3>Add New Bug</h3>
                                    <span></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <form action="/bug/create" method="POST">
                                    <div class="form-group">
                                        <label for="title">Title</label>
                                        <input type="hidden" name="project" value="<%= project.id %>" >
                                        <input type="text" id="title" class="form-custom" name="title"
                                            placeholder="Issue Title..">
                                    </div>
                                    <div class="form-group">
                                        <label for="description">Description</label>
                                        <textarea name="description" class="form-custom" id="description" cols="30"
                                            rows="10" placeholder="Issue Description.."></textarea>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <label for="labeles">Labels</label>
                                                <input type="hidden" name="labels[]" id="labels">
                                                <div class="label-container">
                                                    <div class="label">New</div>
                                                    <div class="label">New</div>
                                                    <div class="label">New</div>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <label for="new-label">Add Label</label>
                                                <div class="label-form">
                                                    <input type="text" class="form-custom" name="add_label" id="new-label"
                                                    placeholder="Search Label..">
                                                    <div class="label-button-group">
                                                        <button>Add Label</button>
                                                        <button>Add New</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary mt-3">Raise Issue</button>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
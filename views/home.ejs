<main>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="projects-page-title">
                    <h2>Projects</h2>
                    <a href="" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addProject">Create Project</a>
                </div>
            </div>
            <div class="col-md-12">
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Project Name</th>
                        <th scope="col">Author</th>
                        <th scope="col">Issues</th>
                        <th scope="col">Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                     <% projects.forEach(function(project, i){ %>
                      <tr>
                        <th scope="row"><%= i+1 %></th>
                        <td><%= project.title %></td>
                        <td><%= project.user.name %></td>
                        <td></td>
                        <td><a href="/project/view/<%= project._id %>" title="View Project"><i class="fa-regular fa-eye"></i></a>
                            <% if(locals.user.id == project.user.id){ %>
                                <a href="#" class="delete" title="Delete Project"><i class="fa-regular fa-trash-can text-danger"></i></a>
                            <%} %>
                        </td>
                      </tr>
                      <% }) %>
                      
                    </tbody>
                  </table>
            </div>
        </div>
    </div>
</main>